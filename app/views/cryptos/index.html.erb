<h1>Cryptos</h1>
<br/>

<table class="table table-bordered table-striped table-hover">
  <thead>
    <tr>
      <th>Symbol</th>
      <th>Cost per</th>
      <th>Amount owned</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cryptos.each do |crypto| %>
      <tr>
        <td><%= crypto.symbol %></td>
        <td><%= crypto.cost_per %></td>
        <td><%= crypto.amount_owned %></td>
        <td><%= link_to 'Show', crypto, class: 'btn btn-default'%></td>
        <td><%= link_to 'Edit', edit_crypto_path(crypto), class: 'btn btn-default' %></td>
        <td><%= link_to 'Destroy', crypto, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Crypto', new_crypto_path, role: 'button', class: 'btn btn-default' %>
