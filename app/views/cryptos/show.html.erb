<h1><%= @crypto_name %></h1>
<br/>

<div class="panel panel-default">
  <div class="panel-heading">Details</div>
  <div class="panel-body">
    <p>
      <strong>Cost per:</strong>
      <%= @crypto.cost_per.round(8) %>
    </p>

    <p>
      <strong>Amount owned:</strong>
      <%= @crypto.amount_owned.round(8) %>
    </p>
  </div>
  <div class="panel-footer">
    <%= link_to 'Back', cryptos_path, class: 'btn btn-default' %>
    <%= link_to 'Edit', edit_crypto_path(@crypto, :crypto_name => @crypto_name), class: 'btn btn-default' %>
    <%= link_to 'Delete', @crypto, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger active' %>
  </div>
</div>
